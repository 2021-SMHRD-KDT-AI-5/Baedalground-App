<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

  <TextView
      android:id="@+id/tv_od_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      app:layout_constraintBottom_toBottomOf="@+id/tv_od_price"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_od_price"
      tools:text="@tools:sample/lorem[3]" />

  <TextView
      android:id="@+id/tv_od_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="10dp"
      app:layout_constraintBottom_toBottomOf="@+id/btn_remove"
      app:layout_constraintEnd_toStartOf="@+id/btn_remove"
      app:layout_constraintTop_toTopOf="@+id/btn_remove"
      tools:text="@tools:sample/lorem[4]" />

  <Button
      android:id="@+id/btn_remove"
      style="@style/Widget.AppCompat.Button.Small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="20dp"
      android:text="제거"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>