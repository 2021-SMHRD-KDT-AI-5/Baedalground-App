<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cmdArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edt_restaurant"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/edt_time"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/edt_restaurant"
        app:layout_constraintStart_toStartOf="@+id/edt_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/edt_restaurant" />

    <TextView
        android:id="@+id/tv_current"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_min"
        app:layout_constraintStart_toEndOf="@+id/tv_min"
        app:layout_constraintTop_toTopOf="@+id/tv_min"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_min"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_list_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_location" />

    <TextView
        android:id="@+id/tv_host_nick"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_current"
        app:layout_constraintStart_toEndOf="@+id/tv_current"
        app:layout_constraintTop_toTopOf="@+id/tv_current"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_list_location"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/edt_time"
        app:layout_constraintStart_toStartOf="@+id/edt_time"
        app:layout_constraintTop_toBottomOf="@+id/edt_time" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_current" />

</androidx.constraintlayout.widget.ConstraintLayout>